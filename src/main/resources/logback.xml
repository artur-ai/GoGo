<configuration>
    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>${user.dir}/src/app_logs.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="file" />
    </root>
</configuration>